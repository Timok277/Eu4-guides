---
import Layout from './Layout.astro';

interface Props {
	title: string;
	description?: string;
	// breadcrumbs: { label: string; href: string }[]; // Future improvement
}

const { title, description } = Astro.props;
---

<Layout title={title}>
	<article>
		<h1>{title}</h1>
		{description && <p class="description"><em>{description}</em></p>}
		<hr />
		<slot />
	</article>
</Layout>

<style>
	article {
		background-color: #1e2027;
		padding: 2rem;
		border-radius: 8px;
		box-shadow: 0 4px 6px rgba(0,0,0,0.1);
	}
	h1 {
		margin-top: 0;
		margin-bottom: 0.5rem;
		font-size: 2.5rem;
	}
	.description {
		font-size: 1.1rem;
		color: #ccc;
		margin-bottom: 1.5rem;
	}
	hr {
		border: 0;
		height: 1px;
		background-image: linear-gradient(to right, rgba(var(--accent-dark), 0), rgba(var(--accent), 0.75), rgba(var(--accent-dark), 0));
		margin: 2rem 0;
	}
</style>
